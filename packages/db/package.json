{
  "name": "@petzo/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/types/types.ts",
      "default": "./src/index.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint .",
    "push": "pnpm with-env drizzle-kit push:pg --config src/config.ts",
    "studio": "pnpm with-env drizzle-kit studio --config src/config.ts",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "drizzle-orm": "^0.30.4",
    "postgres": "~3.3"
  },
  "devDependencies": {
    "@petzo/eslint-config": "workspace:*",
    "@petzo/prettier-config": "workspace:*",
    "@petzo/tsconfig": "workspace:*",
    "dotenv-cli": "^7.4.1",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.57.0",
    "pg": "~8.10",
    "prettier": "^3.2.5",
    "typescript": "^5.4.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@petzo/eslint-config/base"
    ]
  },
  "prettier": "@petzo/prettier-config"
}